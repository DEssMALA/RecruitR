<div class="container">
    <h1>
    Appicants for
    <%= @position.title %>
    </h1>

    <table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Full name</th>
            <th>Email</th>
            <th>Skills</th>
        </tr>
    </thead>
        
        <% @applicants.each do |applicant| %>
            <tr>
            <td><%= link_to applicant.fullname, "/applicants/#{applicant.id}" %></td>
            <td><%= applicant.email %></td>
            <td><%= @skills[applicant.id].join(", ") %></td>
            </tr>
        <% end %>
    </table>

<%= link_to 'Back', positions_path, class: 'btn btn-primary' %>
<%= link_to 'New', "/applicants/new/#{@position.id}", class: 'btn btn-success' %>
</div>