<div class="container">
    <h1>Recruiter list</h1>
    <%= link_to 'New Recruiter', new_recruiter_path, class: 'btn btn-success' %> 
    <table class="table table-hover" style="margin-top: 20px">
    <thead class="thead-dark">
    <tr>
        <th>Full name</th>
        <th>Email</th>
    </tr>
    </thead>
    
    <% @recruiters.each do |recruiter| %>
        <tr>
        <td><%= link_to recruiter.fullname, recruiter_path(recruiter) %></td>
        <td><%= recruiter.email %></td>
        </tr>
    <% end %>
    </table>
</div>
