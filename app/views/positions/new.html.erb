<h1>New Position</h1>

<%= form_with scope: :position, url: positions_path, local: true do |form| %>
  
  <% if @position.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@position.errors.count, "error") %> prohibited
        this position from being saved:
      </h2>
      <ul>
        <% @position.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= label_tag(:skills, "Skills") %>
    <%= text_field_tag(:skills) %>
  </p>

  <p>
    <%= label_tag(:traits, "Traits") %>
    <%= text_field_tag(:traits) %>
  </p>
  
  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', positions_path %>